<%= f.nested_fields_for :client_contacts do |cc| %>
  <%= cc.input :contact_id, :collection => Contact.all.collect {|c| [c.contact_type, c.id] }, label: "Tipo de contacto", as: :select %>
  <%= cc.input :value, label: "Valor de contacto" %>
  <%= cc.hidden_field :client_id %>
  <%= cc.hidden_field :id %>
  <%#= cc.input :_destroy, as: :boolean, label: "Eliminar" %>
  <%= cc.remove_nested_fields_link 'Eliminar contacto', class: "btn btn-danger", data: { confirm: "¿Estás seguro que quieres eliminar este contacto?"} %>
  <hr>
<% end %>

<%= f.add_nested_fields_link :client_contacts, "Agregar contacto", class: "btn btn-success" %>