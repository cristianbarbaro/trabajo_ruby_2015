<h1 style="text-align:center;">Nuevo cliente</h1>

<% if @client.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>
    <ul>
    <% @client.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :client, url: clients_path do |f| %>
  <div style="text-align:center;">
    <div class="field">
      <%= f.label "Nombre" %><br>
      <%= f.text_field :firstname %>
    </div>
    <div class="field">
      <%= f.label "Apellido" %><br>
      <%= f.text_field :lastname %>
    </div>
    <div class="field">
      <%= f.label "Fecha de nacimiento" %><br>
      <%= f.date_field :birthdate, :value => Time.now.strftime('%Y-%m-%d') %>
    </div>
    <div class="field">
      <%= f.label "DNI" %><br>
      <%= f.text_field :document_number %>
    </div>
     <div class="field">
      <%= f.label "Género" %><br>
      <%= f.text_field :genre %>
    </div>
    <div class="field">
      <%= f.label "CUIT/CUIL" %><br>
      <%= f.text_field :identification_code_type %>
    </div>
    <div class="field">
      <%= f.label "Número de CUIT/CUIL" %><br>
      <%= f.text_field :identification_code_number %>
    </div>
    <div class="field">
      <%= f.label "Tipo de cliente" %><br>
      <%= f.text_field :client_type %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
	<%= link_to 'Atrás', clients_path %>
<% end %>