<!DOCTYPE html>
<html>
<head>
  <title>EVader</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse navbar-static-top">
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <a class="navbar-brand" href="/">E-Vader</a>
        <li class="<%= 'active' if current_page?(root_path) %>" ><%= link_to 'Inicio', root_path %></li>
        <li class="<%= 'active' if current_page?(clients_path) %> "><%= link_to 'Clientes', clients_path %></li>
        <li class="<%= 'active' if current_page?(people_path) %>" ><%= link_to 'Personas', people_path %></li>
        <li class="<%= 'active' if current_page?(contacts_path) %>" ><%= link_to 'Tipos contactos', contacts_path %></li>
      </ul>
    </div>
</nav>

<div class="col-md-6 col-md-offset-3">
	<% if flash[:success] %>
		<p id="success" class="alert bg-success text-center"><%= flash[:success] %></p>
	<% end %>
	<% if flash[:alert] %>
		<p id="alert" class="alert bg-danger text-center"><%= flash[:alert] %></p>
	<% end %>
	<%= yield %>
</div>
</body>
</html>
